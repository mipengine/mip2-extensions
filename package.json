{
  "name": "mip-components",
  "version": "1.0.0",
  "description": "Custom MIP Components Repository",
  "main": "index.js",
  "scripts": {
    "dev": "mip2 dev -i",
    "build": "rm -rf dist && mip2 build -i",
    "site": "npm run build && node tools/site",
    "lint": "eslint --ext .js,.vue **/* --ignore-pattern dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mip-project/mip-components.git"
  },
  "keywords": [
    "MIP"
  ],
  "author": "MIP",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mip-project/mip-components/issues"
  },
  "homepage": "https://github.com/mip-project/mip-components#readme",
  "dependencies": {
    "mip-sandbox": "^1.0.14"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsdoc": "^3.7.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "eslint-plugin-vue": "^4.5.0",
    "fs-extra": "^6.0.1",
    "glob": "^7.1.2",
    "husky": "^1.0.0-rc.8",
    "mip2": "^1.0.10"
  }
}
